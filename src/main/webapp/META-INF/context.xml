<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specify a JDBC datasource for postgres-->
    <Resource name="jdbc/postgres"
              auth="Container"
              type="javax.sql.DataSource"
              username="foodtrackeruser"
              password="foodtracker"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost/foodtracker"
              maxActive="10"
              maxIdle="4"
              maxWaitMillis="10000"/>
</Context>